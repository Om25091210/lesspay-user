<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.OfficeAddressFragment">

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_big_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/membership_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/plusjakartadisplaybold"
        android:text="Office Address"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/right" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Sign-in to start exploring our wide \nvariety of Groceries!"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/plusjakartadisplaymedium"
        app:layout_constraintStart_toStartOf="@id/membership_heading"
        app:layout_constraintTop_toBottomOf="@id/membership_heading" />
    <TextView
        android:id="@+id/landmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landmark"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@id/tagline"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/plusjakartadisplaymedium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/landmark_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/gastos_GreyNew"
        android:layout_marginStart="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/landmark"
        android:layout_marginTop="@dimen/_15sdp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of Place"
            android:textColor="@color/grey"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/plusjakartatextregular"
            android:background="@android:color/transparent"
            android:paddingVertical="@dimen/_15sdp"/>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        app:layout_constraintTop_toBottomOf="@id/landmark_card"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@id/landmark_card"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/plusjakartadisplaymedium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/city_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/gastos_GreyNew"
        android:layout_marginStart="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_name"
        android:layout_marginTop="@dimen/_15sdp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of your city"
            android:textColor="@color/grey"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/plusjakartatextregular"
            android:background="@android:color/transparent"
            android:paddingVertical="@dimen/_15sdp"/>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin Code"
        app:layout_constraintTop_toBottomOf="@id/city_card"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@id/city_card"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/plusjakartadisplaymedium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pin_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/gastos_GreyNew"
        android:layout_marginStart="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin"
        android:layout_marginTop="@dimen/_15sdp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pin Code"
            android:textColor="@color/grey"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/plusjakartatextregular"
            android:background="@android:color/transparent"
            android:paddingVertical="@dimen/_15sdp"/>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>